{
  "name": "prospectflow-ingest-api",
  "version": "1.0.0",
  "description": "Ingest API for ProspectFlow",
  "author": "Etienne MAILLOT",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsc && export NODE_ENV=dev && node dist/server.js",
    "reset": "export DB_RESET=true && pnpm run dev",
    "test": "export NODE_ENV=test && vitest --config ./vitest.config.ts",
    "test:unit": "export NODE_ENV=test && vitest run tests/unit",
    "test:db:up": "sudo docker compose -f docker-compose.test-db-only.yaml up -d",
    "test:db:down": "sudo docker compose -f docker-compose.test-db-only.yaml down -v",
    "test:integration": "pnpm test:db:up && sleep 3 && export NODE_ENV=test && vitest run tests/integration && pnpm test:db:down",
    "test:docker": "sudo docker compose -f docker-compose.test.yaml up --build --abort-on-container-exit --exit-code-from prospectflow-test-runner && sudo docker compose -f docker-compose.test.yaml down -v",
    "build": "tsc",
    "deploy": "git pull && export NODE_ENV=production && sudo docker compose -p prospectflow-ingest-api --env-file ./env/.env.production up --build -d",
    "clean_install": "rm -r node_modules/ pnpm-lock.yaml dist/ && pnpm i && tsc "
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.8",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "aws-jwt-verify": "^4.0.1",
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "redis": "^4.0.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.21",
    "uuid": "^13.0.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.8",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^11.0.0",
    "@vitest/coverage-v8": "3.2.4",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vitest": "^3.0.5"
  }
}
